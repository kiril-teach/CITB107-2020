{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "compile",
			"command": "C:/MinGW/bin/g++.exe",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "run",
			"command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"dependsOn":[
				"compile"
			]
		}
	]
}